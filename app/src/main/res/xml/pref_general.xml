<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="@string/key_root">

    <PreferenceCategory android:title="@string/budget">

        <CheckBoxPreference
            android:defaultValue="@bool/pref_set_budget_default"
            android:key="@string/key_set_maximum_budget_checkbox"
            android:title="@string/set_maximum_budget" />

        <PreferenceScreen
            android:key="@string/key_budget_subscreen"
            android:title="@string/budget_settings">

            <PreferenceCategory android:title="@string/budget">

                <org.bolgarov.alexjr.shoppinglist.preferenceSubclasses.MoneyPreference
                    android:defaultValue="@string/pref_maximum_budget_default"
                    android:key="@string/key_maximum_budget_edit_text"
                    android:title="@string/maximum_budget" />

            </PreferenceCategory>

            <PreferenceCategory android:title="@string/budget_warning">

                <CheckBoxPreference
                    android:defaultValue="@bool/pref_set_warning_default"
                    android:key="@string/key_set_warning_checkbox"
                    android:title="@string/set_warning" />

                <ListPreference
                    android:defaultValue="@string/warn_fixed_price_list_value"
                    android:entries="@array/warning_type_labels"
                    android:entryValues="@array/warning_type_values"
                    android:key="@string/key_warning_type_list"
                    android:title="@string/warning_type" />

                <!-- Exactly one of the following two preferences should be shown, based on the
                value of the above preference. -->

                <!-- Option 0 -->
                <org.bolgarov.alexjr.shoppinglist.preferenceSubclasses.MoneyPreference
                    android:defaultValue="@string/pref_warning_fixed_default"
                    android:key="@string/key_warning_fixed_edit_text"
                    android:title="@string/warning_fixed" />

                <!-- Option 1 -->
                <org.bolgarov.alexjr.shoppinglist.preferenceSubclasses.CustomSeekBarPreference
                    android:defaultValue="@integer/pref_warning_percentage_default"
                    android:key="@string/key_warning_percentage_seek_bar"
                    android:title="@string/warning_percentage" />


            </PreferenceCategory>

        </PreferenceScreen>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/tax">

        <CheckBoxPreference
            android:defaultValue="@bool/pref_include_tax_default"
            android:key="@string/key_include_tax_checkbox"
            android:title="@string/include_tax" />

        <org.bolgarov.alexjr.shoppinglist.preferenceSubclasses.PercentPreference
            android:defaultValue="@string/pref_tax_rate_default"
            android:key="@string/key_tax_rate_edit_text"
            android:title="@string/tax_rate" />

    </PreferenceCategory>

</PreferenceScreen>