<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pricing"
        android:textColor="@color/text_color_dialog_item_title"
        android:textSize="@dimen/dialog_item_title" />

    <RadioGroup
        android:id="@+id/pricing_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <RadioButton
            android:id="@+id/per_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:color="@color/text_color_dialog_item_value"
            android:text="@string/per_unit"
            android:textSize="@dimen/dialog_item_value" />

        <RadioButton
            android:id="@+id/per_kg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:color="@color/text_color_dialog_item_value"
            android:text="@string/per_kg"
            android:textSize="@dimen/dialog_item_value" />

        <RadioButton
            android:id="@+id/per_pound"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:color="@color/text_color_dialog_item_value"
            android:text="@string/per_pound"
            android:textSize="@dimen/dialog_item_value" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_per_unit"
                android:textColor="@color/text_color_dialog_item_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:color="@color/text_color_dialog_item_value"
                    android:text="@string/price_prefix"
                    android:textSize="@dimen/dialog_item_value" />

                <EditText
                    android:id="@+id/price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/times_sign"
                    android:textColor="@color/text_color_dialog_item_value"
                    android:textSize="@dimen/dialog_item_value" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/if_per_unit_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/quantity"
                android:textColor="@color/text_color_dialog_item_title"
                android:textSize="@dimen/dialog_item_title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/decrease_quantity_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:src="@drawable/ic_remove_black_24dp" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_color_dialog_item_value"
                    android:textSize="@dimen/dialog_item_value" />

                <ImageButton
                    android:id="@+id/increase_quantity_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:src="@drawable/ic_add_black_24dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/if_per_kg_selected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:textColor="@color/text_color_dialog_item_title"
                android:textSize="@dimen/dialog_item_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/kg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kg"
                    android:textColor="@color/text_color_dialog_item_value"
                    android:textSize="@dimen/dialog_item_value" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/if_per_lb_selected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:textColor="@color/text_color_dialog_item_title"
                android:textSize="@dimen/dialog_item_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/lb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:color="@color/text_color_dialog_item_value"
                    android:text="@string/lb"
                    android:textSize="@dimen/dialog_item_value" />

                <EditText
                    android:id="@+id/oz"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/oz"
                    android:textColor="@color/text_color_dialog_item_value"
                    android:textSize="@dimen/dialog_item_value" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/total_price_no_tax_title"
        android:textColor="@color/text_color_dialog_item_title"
        android:textSize="@dimen/dialog_item_title" />

    <TextView
        android:id="@+id/total_item_price_no_tax_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/sample_price"
        android:textColor="@color/text_color_dialog_item_value"
        android:textSize="@dimen/dialog_item_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/tax_title"
        android:textColor="@color/text_color_dialog_item_title"
        android:textSize="@dimen/dialog_item_title" />

    <TextView
        android:id="@+id/tax_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/sample_tax"
        android:textColor="@color/text_color_dialog_item_value"
        android:textSize="@dimen/dialog_item_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/total_price_title"
        android:textColor="@color/text_color_dialog_item_title"
        android:textSize="@dimen/dialog_item_title" />

    <TextView
        android:id="@+id/total_item_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/sample_price"
        android:textColor="@color/text_color_dialog_item_value"
        android:textSize="@dimen/dialog_item_value" />

</LinearLayout>